---
import Layout from "../layouts/Layout.astro";

const messageValue = Astro.url.searchParams.get("message") || "";
---

<Layout title="Contact Us">
    <div class="container section">
        <div class="contact-grid">
            <div class="contact-info">
                <h1>Get in Touch</h1>
                <p>
                    We'd love to hear from you. Fill out the form or reach us
                    via phone or email.
                </p>

                <div class="info-item">
                    <h3>Visit Us</h3>
                    <p>123 Example Street<br />City, State, Zip</p>
                </div>

                <div class="info-item">
                    <h3>Call Us</h3>
                    <p>+1 (555) 123-4567</p>
                </div>
            </div>

            <div class="contact-form-wrapper">
                <form
                    action="https://api.web3forms.com/submit"
                    method="POST"
                    class="contact-form"
                >
                    <!-- Replace with your Access Key -->
                    <input
                        type="hidden"
                        name="access_key"
                        value="10d6183a-956b-4ba4-8616-619b093dac0e"
                    />

                    <div class="form-group">
                        <label for="name">Name</label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            required
                            placeholder="Your Name"
                        />
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            placeholder="your.email@example.com"
                        />
                    </div>

                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea
                            id="message"
                            name="message"
                            rows="5"
                            required
                            placeholder="How can we help you?"
                            >{messageValue}</textarea
                        >
                    </div>

                    <button type="submit" class="btn-submit"
                        >Send Message</button
                    >
                </form>
            </div>
        </div>
    </div>
</Layout>

<style>
    .contact-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--spacing-2xl);
    }

    @media (min-width: 768px) {
        .contact-grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    .contact-info h1 {
        font-size: 3rem;
        margin-bottom: var(--spacing-md);
    }

    .info-item {
        margin-top: var(--spacing-xl);
    }

    .info-item h3 {
        font-size: 1.25rem;
        color: var(--color-primary-dark);
        margin-bottom: var(--spacing-xs);
    }

    .contact-form {
        background: white;
        padding: var(--spacing-xl);
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-md);
    }

    .form-group {
        margin-bottom: var(--spacing-md);
    }

    .form-group label {
        display: block;
        margin-bottom: var(--spacing-xs);
        font-weight: 500;
        color: var(--color-secondary);
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: var(--spacing-sm);
        border: 1px solid #e5e7eb;
        border-radius: var(--radius-sm);
        font-family: inherit;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--color-primary);
        ring: 2px solid var(--color-primary);
    }

    .btn-submit {
        width: 100%;
        background-color: var(--color-primary);
        color: white;
        padding: var(--spacing-md);
        border: none;
        border-radius: var(--radius-sm);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: background-color var(--transition-normal);
    }

    .btn-submit:hover {
        background-color: var(--color-primary-dark);
    }
</style>
